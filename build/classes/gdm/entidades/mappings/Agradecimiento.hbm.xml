<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="gdm.entidades.clases.Agradecimiento" table="agradecimientos">
    <id name="id" type="java.lang.Integer">
      <column name="id"/>
      <generator class="identity"/>
    </id>
  <property name="clave" type="string" column="clave" length="30"/> 
  <property name="mensaje" type="string" column="mensaje" length="1000"/>
  <property name="personalizada" type="org.hibernate.type.NumericBooleanType" column="personalizada"/> 
  </class>
</hibernate-mapping>
