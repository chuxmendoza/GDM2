<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="gdm.entidades.clases.Anticipo" table="anticipos">
    <id name="id" type="java.lang.Integer">
      <column name="id"/>
      <generator class="identity"/>
    </id>
  
  <property name="nombre" type="string" column="nombre" length="300"/>
  <property name="celular" type="string" column="celular" length="30"/>
  <property name="telefono" type="string" column="telefono" length="30"/>
  <property name="concepto" type="string" column="concepto" length="500"/>
  <property name="fecha"  type="date"/>
  <property name="cantidad" type="double" column="cantidad" />
  <property name="recibo" type="string" column="recibo" length="500"/>
  <property name="folio" type="int" column="folio"/>
  <many-to-one name="usuario" column="idUsuario"
            class="gdm.entidades.clases.Usuario" lazy="false"/>
  </class> 
</hibernate-mapping>
